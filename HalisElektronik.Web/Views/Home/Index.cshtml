@model MainViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* Carousel Kismi *@
<div class="container-fluid m-0 mb-5 p-0">

    <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel" data-bs-theme="light">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.carouselMains.ToList().Count; i++)
            {
                <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @i"></button>
            }
        </div>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.carouselMains.Count; i++)
            {
                if (i == 1)
                {
                    <div class="carousel-item active">
                        <img src="~/ImageLibrary/@Model.carouselMains[i].ImageUrl" class="h-100 w-100 object-fit-cover" alt="@Model.carouselMains[i].Title" />
                        <div class="container">
                            <div class="carousel-caption text-start">
                                <h1>@Model.carouselMains[i].Title</h1>
                                <p class="opacity-75">@Model.carouselMains[i].Description</p>
                                <p><a class="btn btn-lg btn-primary" href="@Model.carouselMains[i].BtnUrl">@Model.carouselMains[i].BtnTitle</a></p>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img src="~/ImageLibrary/@Model.carouselMains[i].ImageUrl" class="h-100 w-100 object-fit-cover" alt="@Model.carouselMains[i].Title" />
                        <div class="container">
                            <div class="carousel-caption text-start">
                                <h1>@Model.carouselMains[i].Title</h1>
                                <p class="opacity-75">@Model.carouselMains[i].Description</p>
                                <p><a class="btn btn-lg btn-primary" href="@Model.carouselMains[i].BtnUrl">@Model.carouselMains[i].BtnTitle</a></p>
                            </div>
                        </div>
                    </div>
                }
            }


        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <div class="container-fluid">
        <!-- Three columns of text below the carousel -->
        <div class="container px-4 py-5" id="hanging-icons">
            <h2 class="pb-2 border-bottom">Hanging icons</h2>
            <div class="row row-cols-3 p-0 m-0 justify-content-center mb-5">
                @foreach (var item in Model.containerMarketings)
                {
                    <div class="col d-flex align-items-start row p-0 m-0 text-center">
                        <div class="col-12">
                            <img src="~/ImageLibrary/@item.ImageUrl" class="object-fit-cover m-0 p-0 rounded-circle w-25" />
                        </div>
                        <div class="col-12">
                            <h3 class="fs-2 text-body-emphasis">@item.Title</h3>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }
            </div>
            @for (int i = 0; i < Model.featuretteMains.Count; i++)
            {
                if (i == 1)
                {
                    <div class="row featurette bg-body-tertiary rounded-3 my-4">
                        <div class="col-md-7 order-md-2">
                            <h2 class="featurette-heading fw-normal lh-1">@Model.featuretteMains[i].Title</h2>
                            <p class="lead">@Model.featuretteMains[i].Description</p>
                        </div>
                        <div class="col-md-5 p-0">
                            <img src="~/ImageLibrary/@Model.featuretteMains[i].ImageUrl" alt="@Model.featuretteMains[i].Title" class="w-100 object-fit-cover rounded-1" style="height:500px;" />
                        </div>
                    </div>

                }
                else
                {

                    <div class="row featurette bg-body-tertiary rounded-3 p-0">
                        <div class="col-md-7">
                            <h2 class="featurette-heading fw-normal lh-1">@Model.featuretteMains[i].Title</h2>
                            <p class="lead">@Model.featuretteMains[i].Description</p>
                        </div>
                        <div class="col-md-5 p-0">
                            <img src="~/ImageLibrary/@Model.featuretteMains[i].ImageUrl" alt="@Model.featuretteMains[i].Title" class="w-100 object-fit-cover rounded-1" style="height:500px;" />
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>