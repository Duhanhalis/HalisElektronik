@model CarouselViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "../../Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <form asp-action="CarouselEdit" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 p-3 g-3 border rounded-3">
                <img src="~/CarouselImage/@Model.ImageUrl" class="w-100" />
                <input type="hidden" asp-for="ImageUrl" />
                <input type="hidden" asp-for="CarouselMainId" class="hidden" />

                <label asp-for="ImageUrlFile" class="mt-3"></label>
                <input class="form-control" type="file" asp-for="ImageUrlFile" />
                <span asp-validation-for="ImageUrl"></span>

                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" />
                <span asp-validation-for="Title"></span>

                <label asp-for="Description"></label>
                <input type="text" class="form-control" asp-for="Description" />

                <label asp-for="BtnTitle"></label>
                <input type="text" class="form-control" asp-for="BtnTitle" />

                <label asp-for="BtnUrl"></label>
                <input type="text" class="form-control" asp-for="BtnUrl" />

                <button type="submit" class="btn btn-success my-3">Ekle</button>
            </div>
            <div class="col-3"></div>
        </div>


    </form>
</div>