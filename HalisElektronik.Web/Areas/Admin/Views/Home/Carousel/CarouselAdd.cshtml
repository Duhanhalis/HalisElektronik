@model CarouselViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "../../Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <form asp-action="CarouselAdd" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data" >
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 p-3 g-3 border rounded-3">
                <label asp-for="ImageUrlFile"></label>
                <input class="form-control" type="file" asp-for="ImageUrlFile" />
                
                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" />

                <label asp-for="Description"></label>
                <input type="text" class="form-control" asp-for="Description" />

                <label asp-for="BtnTitle"></label>
                <input type="text" class="form-control" asp-for="BtnTitle" />
                
                <label asp-for="BtnUrl"></label>
                <input type="text" class="form-control" asp-for="BtnUrl" />

                <button type="submit" class="btn btn-success my-3">Ekle</button>
            </div>
            <div class="col-3"></div>
        </div>


    </form>
</div>