@model Info
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <form asp-action="InfoEdit" asp-controller="Home" asp-area="Admin" method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="container">

            <input type="hidden" asp-for="InfoId" />
            <div class="row m-5">
                <div class="col-12 mb-3">
                    <label asp-for="HeaderTitle" class="form-label"></label>
                    <input type="text" asp-for="HeaderTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="HeaderTitle"></span>
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="HeaderDescription" class="form-label"></label>
                    <input type="text" asp-for="HeaderDescription" class="form-control">
                    <span class="text-danger" asp-validation-for="HeaderDescription"></span>
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="InfoMapsUrl" class="form-label"></label>
                    <input type="text" asp-for="InfoMapsUrl" class="form-control">
                    <span class="text-danger" asp-validation-for="InfoMapsUrl"></span>
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="InfoTitle" class="form-label"></label>
                    <input type="text" asp-for="InfoTitle" class="form-control">
                    <span class="text-danger" asp-validation-for="InfoTitle"></span>
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="InfoBody" class="form-label"></label>
                    <textarea type="text" asp-for="InfoBody" class="form-control"></textarea>
                    <span class="text-danger" asp-validation-for="InfoBody"></span>
                </div>
                <button class="col-3 btn btn-success">Değiştir</button>
            </div>
        </div>
    </form>
</div>