@{
    ViewData["Title"] = "Home Page";
    Layout = "../Shared/_LayoutAdmin.cshtml";
}
@model Main
<div class="row m-0">

    <partial name="../Shared/_NavbarAdmin.cshtml" />

    <div class="container col my-2">
        <label class="my-2 fs-1" asp-for="carouselMains"></label>
        <hr />

        <div class="row row-cols-lg-5 gap-3 m-0">
            @if (Model.carouselMains.ToList().Count > 0)
            {
                @foreach (var item in Model.carouselMains)
                {
                    <div class="col p-0 row m-1 p-0">
                        <div class="card p-0">
                            <img class="card-img-top" src="~/ImageLibrary/@item.ImageUrl">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <a asp-action="CarouselEdit" asp-controller="Home" asp-area="Admin" asp-route-id="@item.CarouselMainId" class="btn btn-warning">Düzenle</a>
                                <a asp-action="CarouselDelete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.CarouselMainId" class="btn btn-danger">Sil</a>
                            </div>
                        </div>
                    </div>
                }
            }
            @if (Model.carouselMains.ToList().Count < 4)
            {
                <div class="col p-0">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="~/ImageLibrary/No-Image.jpg">
                        <div class="card-body">
                            <h5 class="card-title">...</h5>
                            <p class="card-text">...</p>
                            <a asp-action="CarouselAdd" asp-controller="Home" asp-area="Admin" class="btn btn-primary">Ekle</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <label class="my-2 fs-1" asp-for="containerMarketings"></label>
        <hr />
        <div class="row row-cols-4 justify-content-center align-items-center p-0 text-center m-0">
            @if (Model.containerMarketings.ToList().Count > 0)
            {
                @foreach (var item in Model.containerMarketings)
                {
                    <div class="col p-0 w-25">
                        <div class="card row m-1 p-0">
                            <div class="w-100 p-5">
                                <img class="card-img-top p-0 w-100" src="~/ImageLibrary/@item.ImageUrl">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title h-auto overflow-auto">@item.Title</h5>
                                <p class="card-text h-100 overflow-auto">@item.Description</p>
                                <a asp-action="ContainerMarketingEdit" asp-controller="Home" asp-area="Admin" asp-route-id="@item.ContainerMarketingId" class="btn btn-warning">Düzenle</a>
                                <a asp-action="ContainerMarketingDelete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.ContainerMarketingId" class="btn btn-danger">Sil</a>
                            </div>
                        </div>
                    </div>
                }
            }
            @if (Model.containerMarketings.ToList().Count < 4)
            {
                <div class="col p-0">
                    <div class="card">
                        <img class="card-img-top" src="~/ImageLibrary/No-Image.jpg">
                        <div class="card-body">
                            <h5 class="card-title">...</h5>
                            <p class="card-text">...</p>
                            <a asp-action="ContainerMarketingAdd" asp-controller="Home" asp-area="Admin" class="btn btn-primary">Ekle</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <label class="my-2 fs-1" asp-for="featuretteMains"></label>
        <hr>
        <div class="row row-cols-4 m-0">
            @if (Model.featuretteMains.ToList().Count > 0)
            {
                @foreach (var item in Model.featuretteMains)
                {
                    <div class="col row p-0">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/ImageLibrary/@item.ImageUrl">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">@item.Description</p>
                                <a asp-action="FeaturetteMainEdit" asp-controller="Home" asp-area="Admin" asp-route-id="@item.FeaturetteMainId" class="btn btn-warning">Düzenle</a>
                                <a asp-action="FeaturetteMainDelete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.FeaturetteMainId" class="btn btn-danger">Sil</a>
                            </div>
                        </div>
                    </div>
                }
            }
            @if (Model.featuretteMains.ToList().Count < 4)
            {
                <div class="col p-0">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="~/ImageLibrary/No-Image.jpg">
                        <div class="card-body">
                            <h5 class="card-title">...</h5>
                            <p class="card-text">...</p>
                            <a asp-action="FeaturetteMainAdd" asp-controller="Home" asp-area="Admin" class="btn btn-primary">Ekle</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <label class="my-2 fs-1" asp-for="socialMedias"></label>
        <hr />
        <div class="row row-cols-3 g-4 justify-content-center">
            <div class="col">
                @if (Model.socialMedias.ToList().Count > 0)
                {
                    @foreach (var item in Model.socialMedias)
                    {
                        <div class="card">
                            <div class="row m-0">
                                <div class="col-4 p-0">
                                    <img src="~//ImageLibrary//@item.ImageUrl" alt="" class="img-fluid rounded-start" />
                                </div>
                                <div class="col-8 p-0">
                                    <div class="card-body text-center">
                                        <h5>@item.Title</h5>
                                        <p>@item.Link</p>
                                        <a asp-action="SocialMediaEdit" asp-controller="Home" asp-area="Admin" asp-route-id="@item.SocialMediaId" class="btn btn-warning">Düzenle</a>
                                        <a asp-action="SocialMediaDelete" asp-controller="Home" asp-area="Admin" asp-route-id="@item.SocialMediaId" class="btn btn-danger">Sil</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                @if (Model.socialMedias.ToList().Count < 4)
                {
                    <div class="col p-0">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="~/ImageLibrary/No-Image.jpg">
                            <div class="card-body">
                                <h5 class="card-title">...</h5>
                                <p class="card-text">...</p>
                                <a asp-action="SocialMediaAdd" asp-controller="Home" asp-area="Admin" class="btn btn-primary">Ekle</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
