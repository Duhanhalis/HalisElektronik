@model SocialMediaViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "../../Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <form asp-action="SocialMediaAdd" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 p-3 g-3 border rounded-3">

                <label asp-for="ImageUrlFile" class="mt-3"></label>
                <input class="form-control" type="file" asp-for="ImageUrlFile" />

                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" />

                <label asp-for="Link"></label>
                <input type="text" class="form-control" asp-for="Link" />

                <button type="submit" class="btn btn-success my-3">Ekle</button>
            </div>
            <div class="col-3"></div>
        </div>


    </form>
</div>