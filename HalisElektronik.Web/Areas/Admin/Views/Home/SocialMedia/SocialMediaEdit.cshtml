@model SocialMediaViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "../../Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <form asp-action="SocialMediaEdit" asp-controller="Home" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 p-3 g-3 border rounded-3">

                <input type="hidden" asp-for="SocialMediaId" />
                @if (Model.Image != null)
                {
                    <img src="https://localhost:7273/api/Image/GetImageByName/@(Model.Image.ImageUrl)" class="w-100" />
                    <input type="hidden" asp-for="ImageId" />
                    <input type="hidden" asp-for="Image.Id" />
                    <input type="hidden" asp-for="Image.ImageUrl" />
                }

                <label asp-for="Image.ImageFile"></label>
                <input class="form-control" type="file" asp-for="Image.ImageFile" />

                <label asp-for="Image.Title"></label>
                <input class="form-control" type="text" asp-for="Image.Title" />

                <label asp-for="Title"></label>
                <input type="text" class="form-control" asp-for="Title" />

                <label asp-for="Link"></label>
                <input type="text" class="form-control" asp-for="Link" />


                <button type="submit" class="btn btn-success my-3">Ekle</button>
            </div>
            <div class="col-3"></div>
        </div>


    </form>
</div>