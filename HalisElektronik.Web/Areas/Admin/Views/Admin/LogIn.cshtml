@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LogInView

<div class="container-fluid">
    <div class="container my-5">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6 border border-1 rounded-2 p-5">
                <form asp-action="LogIn" asp-controller="Admin" asp-area="Admin" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Adresi :</label>
                        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">Email Adresinizi Giriniz!</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Şifre :</label>
                        <input type="password" class="form-control" asp-for="Password" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3">
                        <label class="form-check-label" asp-for="MemberMe">Beni Hatırla :</label>
                        <input type="checkbox" asp-for="MemberMe" class="form-check-input" id="exampleCheck1">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-3"></div>
        </div>

    </div>
</div>